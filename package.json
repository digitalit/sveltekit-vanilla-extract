{
  "name": "sveltekit-vanilla-extract",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "Using vanilla-extract with SvelteKit: how you can make zero-runtime stylesheets with the new TypeScript friendly preprocessor in Svelte.",
  "scripts": {
    "dev": "svelte-kit dev --port 3000",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview --port 3000",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .prettierignore --write --plugin-search-dir=. .",
    "prepare": "husky install",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "svelte-check": "svelte-check --fail-on-hints"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.0",
    "@fontsource/source-sans-pro": "^4.5.9",
    "@fontsource/source-serif-pro": "^4.5.7",
    "@sveltejs/adapter-static": "^1.0.0-next.32",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vanilla-extract/css": "^1.7.0",
    "@vanilla-extract/css-utils": "^0.1.2",
    "@vanilla-extract/vite-plugin": "3.1.6",
    "commitlint": "^17.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "prettier": "~2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "sharp": "0.28.2",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2",
    "vanilla-lazyload": "^17.8.2",
    "vite": "^2.9.9",
    "vite-imagetools": "^4.0.3"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/sveltekit-vanilla-extract"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/sveltekit-vanilla-extract/issues"
  }
}
